<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pomodoro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_red</item>
        <item name="colorPrimaryVariant">@color/brand_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_blue</item>
        <item name="colorSecondaryVariant">@color/brand_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Accent brand color. -->
        <item name="colorAccent">@color/white</item>

        <!-- Color on surface brand color. -->
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!--Typography-->
        <item name="textAppearanceBody1">@style/TextAppearance.Pomodoro.Body1</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Pomodoro.Headline6</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Pomodoro.Caption</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Pomodoro.Body2</item>


        <item name="textAppearanceHeadline1">@style/TextAppearance.Pomodoro.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Pomodoro.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Pomodoro.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Pomodoro.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Pomodoro.Headline5</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Pomodoro.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Pomodoro.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Pomodoro.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Pomodoro.Overline</item>


        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Pomodoro.BottomSheet</item>
        <item name="materialButtonStyle">@style/Widget.Pomodoro.Button.Primary</item>
    </style>

    <style name="ThemeOverlay.Pomodoro.BottomSheet" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Pomodoro.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.Pomodoro.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.Pomodoro.BottomSheetDialog.Rounded</item>
    </style>

    <style name="ShapeAppearance.Pomodoro.BottomSheetDialog.Rounded" parent="@style/ShapeAppearance.MaterialComponents.LargeComponent">
    </style>

    <style name="ThemeOverlay.Button.Rounded.16" parent="">
        <item name="shapeAppearanceOverlay">@style/ThemeOverlay.ShapeAppearance.Rounded</item>
    </style>

    <style name="ThemeOverlay.Button.Circle" parent="">
        <item name="shapeAppearanceOverlay">@style/ThemeOverlay.ShapeAppearance.Circle</item>
    </style>

    <style name="ThemeOverlay.ShapeAppearance.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlay.ShapeAppearance.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">1000dp</item>
    </style>

    <style name="Widget.Pomodoro.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.Pomodoro.Button.Secondary" parent="Widget.Pomodoro.Button.Primary">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.Pomodoro.Button.Estimation" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style name="TextAppearance.Pomodoro.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">101sp</item>
        <item name="android:letterSpacing">-0.014</item>
        <item name="fontFamily">@font/nunito_light</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">63sp</item>
        <item name="android:letterSpacing">-0.008</item>
        <item name="fontFamily">@font/nunito_light</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">50sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.007</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


    <style name="TextAppearance.Pomodoro.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.00178</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


    <style name="TextAppearance.Pomodoro.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Pomodoro.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Disabling elevation overlays because when chip's default background/surface
         composite are combined with elevation overlays in a highly elevated dialog,
         the resulting color becomes too light and causes contrast
         issues. -->
    <style name="ThemeOverlay.Pomodoro.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>
</resources>